{:paths ["src" "resources"]

 :deps {org.clojure/clojure {:mvn/version "1.11.1"}
        
        ;; Web server stack
        http-kit/http-kit {:mvn/version "2.3.0"}
        ring/ring-core {:mvn/version "1.10.0"}
        ring/ring-json {:mvn/version "0.5.1"}
        compojure/compojure {:mvn/version "1.7.0"}
        ring-cors/ring-cors {:mvn/version "0.1.13"}
        
        ;; System management
        integrant/integrant {:mvn/version "0.8.0"}
        aero/aero {:mvn/version "1.1.6"}
        
        ;; HTTP client for OpenAI
        clj-http/clj-http {:mvn/version "3.12.3"}
        
        ;; JSON handling
        cheshire/cheshire {:mvn/version "5.12.0"}
        
        ;; Environment variables
        io.github.cdimascio/dotenv-java {:mvn/version "3.2.0"}
        
        ;; Logging
        org.clojure/tools.logging {:mvn/version "1.2.4"}
        ch.qos.logback/logback-classic {:mvn/version "1.4.14"}}

 :aliases {:dev {:extra-paths ["dev"]}
           :test {:extra-paths ["test"]
                  :extra-deps {org.clojure/test.check {:mvn/version "1.1.1"}}}
           
           :repl {:main-opts ["-m" "nrepl.cmdline" "--middleware" "[cider.nrepl/cider-middleware]"]
                  :extra-deps {integrant/repl {:mvn/version "0.3.3"}
                               nrepl/nrepl {:mvn/version "1.0.0"}
                               cider/cider-nrepl {:mvn/version "0.42.1"}
                               stylefruits/gniazdo {:mvn/version "1.2.0"}  ; test web sockets
                               }}}}